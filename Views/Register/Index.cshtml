@model MvcOnlineTicariOtomasyon.Models.Entities.Concubine
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>SMTkonutları - Kayıt Ol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --primary: #2563eb;
            --secondary: #4f46e5;
            --light: #f8fafc;
            --dark: #0f172a;
        }

        body {
            background: linear-gradient(135deg, #f0f4ff 0%, #fdfaff 100%);
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
        }

        .register-container {
            display: grid;
            place-items: center;
            padding: 2rem;
        }

        .auth-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 1.5rem;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
            max-width: 480px;
            width: 100%;
            padding: 2.5rem;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .brand-section {
            text-align: center;
            margin-bottom: 2rem;
        }

        .brand-logo {
            height: 60px;
            margin-bottom: 1rem;
            transition: transform 0.3s ease;
        }

            .brand-logo:hover {
                transform: translateY(-2px);
            }

        .form-control {
            height: 48px;
            border: 2px solid #e2e8f0;
            border-radius: 0.75rem;
            padding: 0.75rem 1.25rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            border: none;
            padding: 0.875rem 1.5rem;
            border-radius: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(37, 99, 235, 0.25);
            }

        .small-link {
            color: #64748b;
            text-decoration: none;
            font-size: 0.9rem;
        }

            .small-link:hover {
                color: var(--primary);
            }

        .btn-outline-primary {
            border-radius: 0.75rem;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="auth-card">
            <div class="brand-section">
                <img src="~/web2/images/smt.png" alt="Logo" class="brand-logo" />
                <h4 class="mb-0">Yeni Hesap Oluştur</h4>
            </div>

            @using (Html.BeginForm("CariRegister", "Register", FormMethod.Post))
            {
                <div class="mb-3">
                    <input type="text" name="FirstName" class="form-control" placeholder="İsim" autocomplete="off" required />
                </div>
                <div class="mb-3">
                    <input type="text" name="LastName" class="form-control" placeholder="Soy İsim" autocomplete="off" required />
                </div>
                <div class="mb-3">
                    <input type="text" name="City" class="form-control" placeholder="Şehir" autocomplete="off" required />
                </div>
                <div class="mb-3">
                    <input type="email" name="Mail" class="form-control" placeholder="Email" autocomplete="off" required />
                </div>
                <div class="mb-4">
                    <input type="password" name="Password" class="form-control" placeholder="Parola" autocomplete="off" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
            }

            <div class="text-center mt-4">
                <a href="/Login/Index" class="small-link">Zaten bir hesabım var</a>
            </div>
        </div>
    </div>
</body>
</html>
