@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>SMTkonutları - Giriş Yap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --primary: #2563eb;
            --secondary: #4f46e5;
            --light: #f8fafc;
            --dark: #0f172a;
        }

        body {
            background: linear-gradient(135deg, #f0f4ff 0%, #fdfaff 100%);
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
        }

        .login-container {
            display: grid;
            place-items: center;
            padding: 2rem;
        }

        .auth-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 1.5rem;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
            max-width: 480px;
            width: 100%;
            padding: 2.5rem;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .brand-section {
            text-align: center;
            margin-bottom: 2rem;
        }

        .brand-logo {
            height: 60px;
            margin-bottom: 1rem;
            transition: transform 0.3s ease;
        }

            .brand-logo:hover {
                transform: translateY(-2px);
            }

        .form-toggle-buttons {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .toggle-btn {
            position: relative;
            padding: 0.5rem 1.25rem;
            border: none;
            background: none;
            color: var(--dark);
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .toggle-btn.active {
                color: var(--primary);
            }

                .toggle-btn.active::after {
                    content: '';
                    position: absolute;
                    bottom: -2px;
                    left: 0;
                    right: 0;
                    height: 2px;
                    background: var(--primary);
                    border-radius: 2px;
                }

        .form-control {
            height: 48px;
            border: 2px solid #e2e8f0;
            border-radius: 0.75rem;
            padding: 0.75rem 1.25rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            border: none;
            padding: 0.875rem 1.5rem;
            border-radius: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(37, 99, 235, 0.25);
            }

        .small-link {
            color: #64748b;
            text-decoration: none;
            font-size: 0.9rem;
        }

            .small-link:hover {
                color: var(--primary);
            }

        .form-toggle {
            display: none;
        }

            .form-toggle.active {
                display: block;
            }

        .btn-outline-primary {
            border-radius: 0.75rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="auth-card">
            <div class="brand-section">
                
            </div>

            <div class="form-toggle-buttons">
                <button class="toggle-btn active" onclick="switchForm('cari')">Cari Giriş</button>
                <button class="toggle-btn" onclick="switchForm('admin')">Yönetici Giriş</button>
            </div>

            <!-- Cari Form -->
            <div id="form-cari" class="form-toggle active">
                @using (Html.BeginForm("CariLogin", "Login", FormMethod.Post))
                {
                    <div class="mb-3">
                        <input type="email" name="Mail" class="form-control" placeholder="E-posta Adresi" required />
                    </div>
                    <div class="mb-4">
                        <input type="password" name="Password" class="form-control" placeholder="Parola" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mb-3">Giriş Yap</button>
                }
                <div class="text-center">
                    <a href="#" class="small-link">Şifremi unuttum?</a>
                </div>
            </div>

            <!-- Admin Form -->
            <div id="form-admin" class="form-toggle">
                @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                {
                    <div class="mb-3">
                        <input type="text" name="UserName" class="form-control" placeholder="Kullanıcı Adı" required />
                    </div>
                    <div class="mb-4">
                        <input type="password" name="Password" class="form-control" placeholder="Parola" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                }
            </div>

            <div class="text-center mt-4">
                <a class="btn btn-outline-primary w-100" href="/Register/Index">Yeni Hesap Oluştur</a>
            </div>
        </div>
    </div>

    <script>
        function switchForm(form) {
            const forms = document.querySelectorAll('.form-toggle');
            const buttons = document.querySelectorAll('.toggle-btn');

            forms.forEach(f => f.classList.remove('active'));
            buttons.forEach(b => b.classList.remove('active'));

            document.getElementById(`form-${form}`).classList.add('active');
            event.target.classList.add('active');
        }
    </script>
</body>
</html>
